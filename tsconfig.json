{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@enum/*": [
        "src/app/shared/enums/*"
      ],
      "@type/*": [
        "src/app/shared/types/*"
      ],
      "@fruit/search/*": [
        "src/app/features/fruit-search/*"
      ],
      "@fruit/list/*": [
        "src/app/features/fruit-list/*"
      ]
    }
  }
}